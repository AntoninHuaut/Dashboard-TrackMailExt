{
    "manifest_version": 2,
    "name": "TrackMail-Ext",
    "description": "TrackMail extension for https://dash.antoninhuaut.fr/",
    "version": "1.0.1",
    "author": "Antonin Huaut",
    "applications": {
        "gecko": {
            "id": "dashboard-trackmail-ext@antoninhuaut.fr",
            "strict_min_version": "102.0"
        }
    },
    "options_ui": {
        "page": "options/index.html",
        "open_in_tab": false,
        "browser_style": true
    },
    "message_display_action": {
        "default_title": "TODO switch on/off",
        "default_icon": "icons/icon-64.png"
    },
    "permissions": [
        "compose",
        "messagesRead",
        "accountsRead",
        "storage"
    ],
    "background": {
        "scripts": [
            "utils/requests.js",
            "utils/tokens.js",
            "background_popup.js",
            "background.js"
        ]
    },
    "icons": {
        "512": "icons/icon.png",
        "64": "icons/icon-64.png",
        "32": "icons/icon-32.png",
        "16": "icons/icon-16.png"
    }
}